<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoardActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="#FFF9F9"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="524dp"
        android:layout_height="830dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="163dp"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/gathertogetherapplogo" />

        <TextView
            android:id="@+id/UserHelpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Please Create New Meeting By Creating RoomCode."
            android:textColor="#393737"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="390dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/textbox_style"
            android:ems="10"
            android:hint="RoomCode"
            android:inputType="textPersonName"
            android:textColorHint="#535050" />

        <Button
            android:id="@+id/createMeet"
            android:layout_width="390dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/fogetbutton_style"
            android:backgroundTint="#FFFFFF"
            android:text="Join / Create"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="390dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/loginbutton_style"
            android:text="Share"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>